@page
@model Razor_Pages_Web_App.Pages.CreateSubmissionModel
@{
}
@if (TempData["Message"] != null)
{
	<div class="alert alert-danger centertext">
		@TempData["Message"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<div class="container">
	<div class="row d-flex justify-content-center text-center">
		<div class="col-md-8 d-flex justify-content-center">
			<div class="panel panel-default border m-5 p-4 img-rounded shadow-lg p-3 mb-5 bg-white rounded" id="panel_login">
				@{
					if (Model.Type == 1)
					{
						<h1 class="mt-3">Create Ranked Submission</h1>
					}
					else
					{
						<h1 class="mt-3">Create Unranked Submission</h1>
					}
				}
				<h4 class="mt-3"> Note: All fields are required.</h4>

				<form method="post" class="mt-3 mb-2">
					<label class="h5">Game:  </label>
					<input type="text" value="@Model.Game.Name" class="form-control" disabled />
					<br />

					<label asp-for="@Model.DateInput" class="h5">Date:  </label>
					<input type="date" asp-for="@Model.DateInput" class="form-control" />
					<br />

					<label asp-for="@Model.Hours" class="h5">Hours:  </label>
					<input type="number" max="24" min="0" asp-for="@Model.Hours" value="@Model.Hours" class="form-control" />
					<br />

					<label asp-for="@Model.Minutes" class="h5">Minutes:  </label>
					<input type="number" max="59" min="0" asp-for="@Model.Minutes" value="@Model.Minutes" class="form-control" />
					<br />

					<label asp-for="@Model.Seconds" class="h5">Seconds:  </label>
					<input type="number" max="59" min="0" asp-for="@Model.Seconds" value="@Model.Seconds" class="form-control" />
					<br />

					<label asp-for="@Model.Platform" class="h5">Platform:  </label>
					<select asp-for="@Model.Platform" class="form-control">
						<option value="-1" hidden disabled selected>Select your platform:</option>
						<option value="0">PC</option>
						<option value="1">XboxSeriesX</option>
						<option value="2">XboxSeriesS</option>
						<option value="3">XboxOneX</option>
						<option value="4">XboxOneS</option>
						<option value="5">XboxOne</option>
						<option value="6">Xbox360</option>
						<option value="7">Xbox360Kinect</option>
						<option value="8">Xbox</option>
						<option value="9">PlayStation5</option>
						<option value="10">PlayStation4Pro</option>
						<option value="11">PlayStation4</option>
						<option value="12">PlayStation3</option>
						<option value="13">PlayStation2</option>
						<option value="14">PlayStation</option>
						<option value="15">PlayStationVita</option>
						<option value="16">PlayStationPortable</option>
						<option value="17">NintendoSwitch</option>
						<option value="18">NintendoSwitchLite</option>
						<option value="19">NintendoWiiU</option>
						<option value="20">NintendoWii</option>
						<option value="21">Nintendo3DS</option>
						<option value="22">Nintendo2DS</option>
						<option value="23">NintendoDS</option>
						<option value="24">Android</option>
						<option value="25">iOS</option>
						<option value="26">AndroidTV</option>
						<option value="27">AppleTV</option>
						<option value="28">AppleWatch</option>
						<option value="29">Arcade</option>
						<option value="30">Atari2600</option>
						<option value="31">Atari5200</option>
						<option value="32">Atari7800</option>
						<option value="33">Chromebook</option>
						<option value="34">CommodoreCDTV</option>
						<option value="35">Dreamcast</option>
						<option value="36">DVDPlayer</option>
						<option value="37">fireTV</option>
						<option value="38">Flash</option>
						<option value="39">Genesis</option>
						<option value="40">iPod</option>
						<option value="41">Linux</option>
						<option value="42">Mac</option>
						<option value="43">MSDOS</option>
						<option value="44">N64</option>
						<option value="45">NES</option>
						<option value="46">Oculus</option>
						<option value="47">Saturn</option>
						<option value="48">SegaCD</option>
						<option value="49">SNES</option>
						<option value="50">SteamDeck</option>
						<option value="51">Web</option>
						<option value="52">WindowsPhone</option>
						<option value="53">ZXSpectrum</option>
					</select>
					<br />
					@{
						if (Model.Type == 1)
						{
							<label asp-for="@Model.Link" class="h5">Link:  </label>
							<input type="text" asp-for="@Model.Link" class="form-control" placeholder="Upload your link:" />
						}
						else
						{
							<label asp-for="@Model.TAS" class="h5">TAS:  </label>
							<input type="checkbox" asp-for="@Model.TAS">
							<br />
							<label asp-for="@Model.Glitchless" class="h5">Glitchless:  </label>
							<input type="checkbox" asp-for="@Model.Glitchless">
							<br />
							<label asp-for="@Model.AnyPercent" class="h5">Any Percent:  </label>
							<input type="checkbox" asp-for="@Model.AnyPercent">
							<br />
						}
					}
					<div class="input-group-btn">
						<a class="btn btn-secondary btn-lg mt-3" asp-page="./GameDetails" asp-route-id="@Model.Id">Close</a>
						<button type="submit" class="btn btn-primary btn-lg mt-3" asp-page-handler="OnPost" asp-route-id="@Model.Id" asp-route-type="@Model.Type">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
